<div class="my-6 md:mx-2">
  <section class="relative overflow-hidden rounded-2xl border-2 border-accent/30 bg-foreground/5 px-5 py-7 sm:px-8 sm:py-8">
    <div class="pointer-events-none absolute -right-12 -top-12 size-40 rounded-full bg-accent/10 blur-3xl"></div>
    <div class="flex items-center gap-2 text-xs uppercase tracking-[0.24em] text-accent/80">
      <span class="size-2.5 rounded-full bg-accent/70"></span>
      <span class="size-2.5 rounded-full bg-accent/35"></span>
      <span class="size-2.5 rounded-full bg-accent/20"></span>
      <span>terminal://home</span>
    </div>
    <div class="mt-5 font-mono text-foreground/90">
      <p class="text-sm sm:text-base">
        <span class="text-accent">$</span> boot --site multiterm
      </p>
