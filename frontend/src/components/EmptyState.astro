---
interface Props {
  title?: string
  message?: string
  actionHref?: string
  actionText?: string
}

const title = typeof Astro.props.title === 'string' ? Astro.props.title : 'Nothing here'
const message =
  typeof Astro.props.message === 'string' ? Astro.props.message : 'No data available for this view.'
const actionHref = typeof Astro.props.actionHref === 'string' ? Astro.props.actionHref : null
const actionText = typeof Astro.props.actionText === 'string' ? Astro.props.actionText : 'Go back'
---

<div class="flex flex-col gap-2">
  <p class="text-heading2 font-semibold">{title}</p>
  <p class="text-foreground/70 text-sm">{message}</p>

  {(actionHref || Astro.slots.has('actions')) && (
    <div class="mt-3 flex flex-wrap gap-3">
      {actionHref && (
        <a class="button" href={actionHref}>
          {actionText}
        </a>
      )}
      <slot name="actions" />
    </div>
  )}
</div>

