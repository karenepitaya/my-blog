---
interface Props {
  title?: string
  description?: string
  variant?: 'panel' | 'inline'
  class?: string
}

const { title, description, variant = 'panel' } = Astro.props
const className = typeof Astro.props.class === 'string' ? Astro.props.class : undefined

const base =
  variant === 'inline'
    ? 'bg-foreground/5 border border-foreground/10 rounded-xl overflow-hidden'
    : 'bg-foreground/5 border border-foreground/10 rounded-2xl overflow-hidden'
const padding = variant === 'inline' ? 'p-4 sm:p-5' : 'p-6 sm:p-7'
---

<section class:list={[base, className]}>
  <div class={padding}>
    {(title || description) && (
      <header>
        {title && <h2 class="text-heading2 text-xl font-semibold">{title}</h2>}
        {description && <p class="text-foreground/70 text-sm mt-2">{description}</p>}
      </header>
    )}

    <div class:list={['mt-4', !(title || description) && 'mt-0']}>
      <slot />
    </div>

    {Astro.slots.has('actions') && (
      <div class="mt-5 flex flex-wrap gap-3">
        <slot name="actions" />
      </div>
    )}
  </div>
</section>

