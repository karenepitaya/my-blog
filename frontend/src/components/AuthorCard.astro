---
interface Props {
  author: {
    id: string
    username: string
    avatarUrl: string | null
    bio: string | null
    articleCount: number
  }
}

const { author } = Astro.props
---

<article class="w-full py-5 my-1 md:my-4 border-accent/10">
  <div class="flex items-start gap-4">
    {
      author.avatarUrl ? (
        <img
          src={author.avatarUrl}
          alt={author.username}
          loading="lazy"
          class="rounded-full border-4 border-accent/15 size-16 shrink-0 bg-foreground/5 object-cover"
        />
      ) : (
        <div class="rounded-full border-4 border-accent/15 size-16 shrink-0 bg-foreground/5 flex items-center justify-center text-foreground/60 font-semibold">
          {author.username.slice(0, 1).toUpperCase()}
        </div>
      )
    }
    <div class="flex flex-col gap-2 min-w-0">
      <div class="flex flex-wrap items-center gap-x-2 gap-y-1">
        <h2 class="text-heading1 font-semibold text-xl">{author.username}</h2>
        <span class="text-foreground/70 text-sm">
          {author.articleCount} posts
        </span>
      </div>
      {author.bio && <p class="text-foreground/90 text-base/7">{author.bio}</p>}
    </div>
  </div>
</article>
